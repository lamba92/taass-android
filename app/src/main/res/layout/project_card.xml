<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:src="@drawable/maronn"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside"/>
        <TextView
            android:layout_marginTop="16dp"
            android:text="Nome"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_project_title"
            android:text="Projector!!"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="16dp"
            android:text="Studenti"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_project_students"
            android:text="Tizio (123456); Tizio (123456); Tizio (123456); Tizio (123456); Tizio (123456); "
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="16dp"
            android:text="Descrizione"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_project_description"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse dapibus, ante et ultrices aliquam, felis risus mattis eros, id molestie."
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp"
            android:layout_margin="4dp">

            <include layout="@layout/expandable_panel_layout"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>